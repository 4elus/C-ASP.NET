

@model WebApplication1.TICKETS






<div class="container">
    @using (Html.BeginForm("BuyFilm", "Home", FormMethod.Post))
    {
        <div class="form-group">
            <label for="exampleFormControlSelect1">Зал: </label>
            <select class="form-control" name="zal" id="exampleFormControlSelect1">
                <option>1</option>
                <option>2</option>
            </select>
        </div>

        <div class="form-group">
            <label for="exampleFormControlSelect1">Место: </label>
            <select class="form-control" name="place" id="exampleFormControlSelect1">
                @for(int i = 1; i <= 30; i++)
                {
                    <option>@i</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="exampleFormControlSelect1">Выберите действие: </label>
            <input type="radio" name="name" value="Купить" /> Купить
            <input type="radio" name="name" value="Бронь" /> Бронь
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-primary float-right">Принять</button>
        </div>
        

    }
</div>