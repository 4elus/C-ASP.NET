@{
    Layout = null;
}


@model IEnumerable<WebApplication1.FILMS>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CRUD</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">CRUD</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/Index">Домой</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/ShowAllDataFromDb">Все данные</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/CRUD">Добавить</a>
                </li>
            </ul>
        </div>
    </nav>


    <div class="container">
        <h1 class="text-center display-4">Административная панель</h1>
        <p class="text-success">@Session["updated"]</p>
        @foreach (var item in Model)
        {
            <div class="card mb-2">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(x => item.NAME_FILM)</h5>
                    <p class="card-text">Год выхода фильма: @Html.DisplayFor(x => item.YEAR_FILMS)</p>
                    <div class="float-right">
                        <a href="Update/?id=@item.FILM_ID" class="btn btn-success">Редактировать</a>
                        <a href="#" class="btn btn-danger">Удалить</a>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>
