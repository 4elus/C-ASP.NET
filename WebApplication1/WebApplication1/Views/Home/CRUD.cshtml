@{
    Layout = null;
}

@model WebApplication1.FILMS

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CRUD</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">CRUD</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/Index">Домой</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/ShowAllDataFromDb">Все данные</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Добавить</a>
                </li>
            </ul>
        </div>
    </nav>


    <div class="container">
        @using (Html.BeginForm("AddFilm", "Home", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.NAME_FILM, "Название фильма: ")
                @Html.TextBoxFor(model => model.NAME_FILM, new { @class = "form-control", required = "required" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ID_COUNTRY, "Страна: ")
                @Html.DropDownListFor(model => model.ID_COUNTRY, ViewBag.Country as SelectList, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ID_GENRE, "Жанр фильма: ")
                @Html.DropDownListFor(model => model.ID_GENRE, ViewBag.Genres as SelectList, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ID_STUDIA, "Студия: ")
                @Html.DropDownListFor(model => model.ID_STUDIA, ViewBag.Studies as SelectList, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.YEAR_FILMS, "Год фильма: ")
                @Html.TextBoxFor(model => model.YEAR_FILMS, new { @class = "form-control", type = "number", required = "required" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LENGTH_FILM, "Длительность: ")
                @Html.TextBoxFor(model => model.LENGTH_FILM, new { @class = "form-control", type = "number", required = "required" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RATING, "Рейтинг: ")
                @Html.TextBoxFor(model => model.RATING, new { @class = "form-control", type = "number", required = "required" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary float-right">Добавить</button>
            </div>
            <p class="text-success">@Session["added"]</p>

        }
    </div>
</body>
</html>
