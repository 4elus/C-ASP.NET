@{
    Layout = null;
}


@model IEnumerable<WebApplication1.FILMS>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CRUD</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>



    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">CRUD</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/Index">Домой</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="~/Home/ShowAllDataFromDb">Все данные</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/CRUD">Добавить</a>
                </li>



                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Запросы</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="~/Home/FilmByCountry/">Поиск фильма по стране</a>
                        <a class="dropdown-item" href="~/Home/StatistickByGenre">Статистика по жанрам</a>
                        <a class="dropdown-item" href="~/Home/StatByCountries">Статистика по фильмам</a>
                        <a class="dropdown-item" href="~/Home/CountBronFilms">Забронированные фильмы</a>
                        <a class="dropdown-item" href="~/Home/FinalQuery">Доход с фильмов</a>
                        <a class="dropdown-item" href="~/Home/FindWorkerById">Получить сотрудника по ID</a>
                        <a class="dropdown-item" href="~/Home/DohodFilmByDate">Доход фильма за период</a>
                        <a class="dropdown-item" href="~/Home/Actor">Режиссер и актер</a>
                        <a class="dropdown-item" href="~/Home/LengthFilm">Получить длину фильма</a>
                        <a class="dropdown-item" href="~/Home/CalcYear">Расчет возраста актера на момент выхода фильма</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/Document">Документ</a>
                </li>
            </ul>
        </div>
    </nav>


    <div class="container">
        <h1 class="text-center display-4">Результат</h1>
        @if (Session["resQuery"] != "Нет данных")
        {
            <div class="alert alert-info" role="alert">
                @Session["resQuery"]
            </div>
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                @Session["resQuery"]
            </div>
        }
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>
